<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.csform.android.uiapptemplate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="172dp">
    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/header_navigation_drawer_3"
        android:id="@+id/include" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="CA IPCC"
            android:textColor="@color/white"
            android:textSize="@dimen/abc_text_size_title_material_toolbar"
            android:paddingBottom="60dp"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="28dp" />

        <ImageView
            android:id="@+id/header_logo"
            android:onClick="enroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="0dp"
            android:contentDescription="@string/cd_background_image"
            android:src="@drawable/common_plus_signin_btn_text_light_focused"
            android:layout_marginBottom="36dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color_grey_100" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="60dp"
            android:paddingTop="60dp" >

            <com.csform.android.uiapptemplate.font.RobotoTextView
                style="@style/TextViewAppearance.Display1"
                android:text="@string/typography1" />

            <com.csform.android.uiapptemplate.font.RobotoTextView
                style="@style/TextViewAppearance.Headline1"
                android:text="@string/material_design" />

            <com.csform.android.uiapptemplate.font.RobotoTextView
                style="@style/TextViewAppearance.Title1"
                android:text="@string/all_set_by_google_instructions_of_material_design" />

            <com.csform.android.uiapptemplate.font.RobotoTextView
                style="@style/TextViewAppearance.Body1"
                android:text="@string/lorem_ipsum_long" />

            <com.csform.android.uiapptemplate.font.RobotoTextView
                style="@style/TextViewAppearance.Caption1"
                android:text="@string/lorem_ipsum_short" />

            <View style="@style/DividerStyle"/>

            <com.csform.android.uiapptemplate.font.RobotoTextView
                style="@style/TextViewAppearance.Display2"
                android:text="@string/typography2" />

            <com.csform.android.uiapptemplate.font.RobotoTextView
                style="@style/TextViewAppearance.Headline2"
                android:text="@string/material_design_variation" />

            <com.csform.android.uiapptemplate.font.RobotoTextView
                style="@style/TextViewAppearance.Title2"
                android:text="@string/thiner_and_lighter_version" />

            <com.csform.android.uiapptemplate.font.RobotoTextView
                style="@style/TextViewAppearance.Body2"
                android:text="@string/lorem_ipsum_long" />

            <com.csform.android.uiapptemplate.font.RobotoTextView
                style="@style/TextViewAppearance.Caption2"
                android:text="@string/lorem_ipsum_short" />

            <View style="@style/DividerStyle"/>

            <com.csform.android.uiapptemplate.font.RobotoTextView
                style="@style/TextViewAppearance.Display3"
                android:text="@string/typography3" />

            <com.csform.android.uiapptemplate.font.RobotoTextView
                style="@style/TextViewAppearance.Headline3"
                android:text="@string/material_design_variation" />

            <com.csform.android.uiapptemplate.font.RobotoTextView
                style="@style/TextViewAppearance.Title3"
                android:text="@string/thicker_and_darker_version" />

            <com.csform.android.uiapptemplate.font.RobotoTextView
                style="@style/TextViewAppearance.Body3"
                android:text="@string/lorem_ipsum_long" />

            <com.csform.android.uiapptemplate.font.RobotoTextView
                style="@style/TextViewAppearance.Caption3"
                android:text="@string/lorem_ipsum_short" />
        </LinearLayout>

    </ScrollView>
    <com.csform.android.uiapptemplate.view.pzv.PullToZoomListViewEx
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:visibility="gone"/>
    <!-- This part of code is from old library for PullToZoomView -->
        <!-- app:listHeadView="@layout/header_navigation_drawer_3" /> -->


</LinearLayout>